<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditNoteActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarOfEditNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">


        <EditText
            android:id="@+id/TittleOfEditNote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Tittle"
            android:paddingTop="8dp"
            android:textColor="@color/textcolor"
            android:textSize="22sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>


    <EditText
        android:id="@+id/DescOfEditNote"
        android:layout_below="@id/toolbarOfEditNote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Note"
        android:padding="15dp"
        android:textSize="18sp"
        android:textColorHint="#8C8181"
        android:background="@color/background"
        android:gravity="start|top"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/UpdateNoteIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/backgroundFabIcon"
        android:clickable="true"
        app:maxImageSize="40dp"
        app:borderWidth="0dp"
        app:srcCompat="@drawable/ic_update" />

</RelativeLayout>